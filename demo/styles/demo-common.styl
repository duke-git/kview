.example-container
    font-family 'Avenir', Helvetica, Arial, sans-serif
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    text-align left
    color #2c3e50
    padding 10px 25px
    min-height 950px

.example-title-container
    float left
    h1
      text-align left
      font-size 24px
    p
      font-size 16px
      margin-top 10px

.example-body-container
    clear both
    border 1px solid #eee
    border-radius 6px
    position relative
    margin 20px 0
    background #fff
    min-height 750px
    height auto
    .demo-title
        text-align left
        font-size 20px
        padding 10px 5px

.example-body-item
    box-shadow #888 0px 0px 10px
    margin-bottom 5px
    background #fff
    overflow hidden
    .example-demo-container
        float left
        width 49%
        padding 10px 0
        .component-container
            padding 10px 10px
        .components-comment
            font-size 14px
            text-align left
            padding 0 10px
            font-weight bold
            color #888
    .example-code-container
        float right
        width 50%
        border-left 1px dashed #888
        text-align left
        color #3f51b5
        pre
            width 100%
            height 160px
            border none
            font-size 14px
            display inline-block
            overflow auto

.demo-component-props
    float left
    margin-bottom 10px
    margin-top 15px

.component-api-list
    clear both
    font-size 12px
    border-collapse collapse
    border-spacing 0
    empty-cells show
    border 1px solid #e9e9e9
    width 100%
    margin-top 24px
    th
        border 1px solid #e9e9e9
        padding 8px 16px
        text-align left
    td
        border 1px solid #e9e9e9
        padding 8px 16px
        text-align left
